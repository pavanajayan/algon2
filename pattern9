#include <iostream>
using namespace std;

int main() {
    int N;
    cout << "Enter number of rows (half of diamond): ";
    cin >> N;

    
    for (int i = 1; i <= N; i++) {
        
        for (int space = 1; space <= N - i; space++) {
            cout << " ";
        }
        
        for (int star = 1; star <= (2 * i - 1); star++) {
            cout << "*";
        }
        cout << endl;
    }

    
    for (int i = N - 1; i >= 1; i--) {
        
        for (int space = 1; space <= N - i; space++) {
            cout << " ";
        }
        
        for (int star = 1; star <= (2 * i - 1); star++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
