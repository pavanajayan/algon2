#include <bits/stdc++.h>
using namespace std;

int main() {
    int N;
    cout << "Enter a number: ";
    cin >> N;

    
    for (int i = 1; i <= N; i++) {
        
        for (int space = 1; space <= N - i; space++) {
            cout << " ";
        }
        
        for (int star = 1; star <= (2 * i - 1); star++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
